<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">  
        <form action="/signup" method="POST"novalidate class="needs-validation">
            <div class="mb-3">
                <label form="username" class="form-label">Username</label>
                <input name="username"
                id="username" 
                class="form-control" 
                type="text"
                required
                />
                <div class="valid-feedback">Looks good</div>
            </div>
            <div class="mb-3">
                <label form="email" class="form-label">Email</label>
                <input name="email"
                id="email" 
                class="form-control" 
                type="email"
                required
                />
            </div>
            <div class="mb-3">
                <label form="password" class="form-label">Password</label>
                <input name="password"
                id="password" 
                class="form-control" 
                type="password"
                required
                />
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>
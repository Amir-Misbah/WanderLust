<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3"><i><b>Login </i></b></h1>
    <div class="col-6 offset-3">  
        <form action="/login" method="POST"novalidate class="needs-validation">
            <div class="mb-3">
                <label form="username" class="form-label">Username</label>
                <input name="username"
                id="username" 
                class="form-control" 
                type="text"
                required
                />
            </div>
            <div class="mb-3">
                <label form="password" class="form-label">Password</label>
                <input name="password"
                id="password" 
                class="form-control" 
                type="password"
                required
                />
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>